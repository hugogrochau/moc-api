<?php
namespace MocApi\Database;

class DBInfo {

  const DB_HOST = '';
  const DB_PORT = '';
  const DB_NAME = '';
  const DB_USER = '';
  const DB_PASSWORD = '';

  public static function getConnString() {
    return sprintf("host=%s port=%s dbname=%s user=%s password=%s",
    self::DB_HOST,
    self::DB_PORT,
    self::DB_NAME,
    self::DB_USER,
    self::DB_PASSWORD);
  }
}
?>
